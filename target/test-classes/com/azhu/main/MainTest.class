    @Test
    public void origAndAllTest() {
        String[] str = new String[]{TxtIOUtils.readTxt("D:/test/orig.txt"), TxtIOUtils.readTxt("D:/test/orig_0.8_add.txt"), TxtIOUtils.readTxt("D:/test/orig_0.8_del.txt"), TxtIOUtils.readTxt("D:/test/orig_0.8_dis_1.txt"), TxtIOUtils.readTxt("D:/test/orig_0.8_dis_10.txt"), TxtIOUtils.readTxt("D:/test/orig_0.8_dis_15.txt")};
        String ansFileName = "D:/test/ansAll.txt";

        for(int i = 0; i <= 5; ++i) {
            double ans = HammingUtils.getSimilarity(SimHashUtils.getSimHash(str[0]), SimHashUtils.getSimHash(str[i]));
            TxtIOUtils.writeTxt(ans, ansFileName);
        }

    }

